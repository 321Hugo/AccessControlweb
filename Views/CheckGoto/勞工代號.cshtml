        <tr>
            <td style="text-align:left">
                @Html.LabelFor(m => m.UserId, "工號:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", required = "required" } })
